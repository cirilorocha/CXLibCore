//#############################################################################
User Function CXPrcFileNm(cFile AS Character);	//01
													AS Character
	
	//-- Parâmetros da Rotina -------------------------------------------------
	ParamObg 0		VAR cFile

	//Pre-processa o nome do arquivo para nao haverem erros
	cFile	:= AllTrim(cFile)
	cFile	:= StrTran(cFile,'*','_')
	cFile	:= StrTran(cFile,'"','_')
	cFile	:= StrTran(cFile,'?','_')
	cFile	:= StrTran(cFile,'<','_')
	cFile	:= StrTran(cFile,'>','_')

Return cFile

